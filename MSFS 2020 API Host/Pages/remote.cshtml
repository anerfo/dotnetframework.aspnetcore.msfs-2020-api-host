            .mfd {
                top:1px; left:512px; width: 256px
            }
            .pfdcontrols {
                top:95px;
                left:430px;
                line-height:0;
                width:0;
            }
            .pfdrange {
                top:95px;
                left:280px;
                line-height:0;
                width:0;
            }
            .mfdrange {
                top:95px;
                left:760px;
                line-height:0;
                width:0;
            }
            .mfdcontrols {
                top:95px;
                left:900px;
                line-height:0;
                width:0;
            }
            .softkey  {
                width: 42.5px; 
                height: 42.5px;
            }
            .softkeyControl  {
                width: 39px; 
                height: 30px;
            }
            .toggleKey {
                top:0px; left:1000px; height:5px; width:5px; z-index:100; display: inline-block;
            }
